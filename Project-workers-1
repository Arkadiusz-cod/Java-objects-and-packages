import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;
public class firm {
    private static final String FILE_PATH = "C://java//file.txt";

    public static void main(String[] args) {
      class Worker {
         String name;
         String lastName;
         String specialization;
         int age;
     }
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter name");
        String getName = scanner.nextLine();
        System.out.println("Enter lastName");
        String getLastname = scanner.nextLine();
        System.out.println("Enter Specialization");
        String getSpecialization = scanner.nextLine();
        System.out.println("Enter age");
        int getAge = scanner.nextInt();

        try {
            FileWriter fileWriter = new FileWriter(FILE_PATH);
            PrintWriter printWriter = new PrintWriter(fileWriter);
            printWriter.println(getName + getLastname + getSpecialization + getAge);
       printWriter.close();
        } catch (IOException e) {
            throw new RuntimeException(e);
        }

        Worker[] workers = new Worker[5];
         String[] names = {"James","Dustin","Jacob","Max",getName};
         String[] lastNames = {"Porier","Trump","Jackson","Stones",getLastname};
         String[] specializations = {"Mechanic","Bricklayer","Driver","Office", getSpecialization};
         int[] ages = {42, 54, 28, 40, getAge};


        for(int i = 0; i<workers.length;i++) {
            workers[i] = new Worker();
            workers[i].name = names[i];
            workers[i].lastName = lastNames[i];
            workers[i].age = ages[i];
            workers[i].specialization = specializations[i];

        }
        System.out.println("Employee IDs  : ");
        for(int i = 0; i< workers.length; i++){
            System.out.println(names[i] + lastNames[i] + specializations[i] + ages[i]);
        }






    }
}

